{% extends 'base.html.twig' %}

{% block title %}Nouveau joueur{% endblock %}

{% block body %}
<div class="container">

    <h1 class="mt-4 text-light">Ajout d'un nouveau joueur</h1>

    {% for message in app.flashes('success')%}
        <div class="alert alert-success mt-4">
            {{message}}
        </div>
    {% endfor %}

    <div>{{form_start(form)}}</div>
    <div>{{form_row(form.name)}}</div>
    <div>{{form_row(form.role)}}</div>
    <div>{{form_row(form.team)}}</div>
    <div>{{form_end(form)}}</div>
</div>
{% endblock %}
