{% extends 'base.html.twig' %}

{% block title %}News{% endblock %}

{% block body %}

    {{ include('shared/navbar.html.twig') }}
    
    <div class="container">
        <div class="row">
                {% for team in teams %}
                    <div class="col-lg-4 col-md-6 d-none d-md-inline mx-auto">
                        <img src="{{ asset('build/images/' ~ team.logo) }}" class="team-img col-4 mx-auto mt-4" />
                        <h3 class="team-name text-light">{{team.name}}</h3>
                        <p class="team-nationality text-light">{{team.nationality}}</p>         
                    </div>                    
                {% else %}
                    Aucuns articles trouv√©s
                {% endfor %}
        </div>
    </div>

{% endblock %}
