{% extends 'base.html.twig' %}

{% block title %}News{% endblock %}

{% block body %}

    {{ include('shared/navbar.html.twig') }}
    
    <table class="table table-dark table-bordered w-50 mx-auto mt-5">
        <thead>
            <tr>
                <th>Nom de l'équipe</th>
                <th>Rôle</th>
            </tr>
        </thead>
        <tbody>
            {% for player in players %}
                <tr>
                    <td>{{ player.name }}</td>
                    <td>{{ player.role }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="2">Aucune équipe trouvée</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
